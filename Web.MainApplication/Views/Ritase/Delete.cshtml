@model Repository.Application.DataModel.RITASE

@{
    ViewBag.Title = "Delete";
}
<div class="box box-solid">
    <div class="box-header with-border">
        <h3 class="box-title">
            Delete - Ritase
        </h3>
        <h4>Are you sure you want to delete this?</h4>
    </div>
    <!-- /.box-header -->
    <div class="box-body">


        <dl class="dl-horizontal">
            <dt>
                Ritase Number
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RITASENUMBER)
            </dd>
            <dt>
                Ritase Time
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RITASETIME)
            </dd>

            <dt>
                Status
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RITASESTATUS)
            </dd>

            <dt>
                Detail Armada
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ARMADA1.ARMADANAME) - @Html.DisplayFor(model => model.ARMADA1.ARMADACAPACITYINKG) kg - Site @Html.DisplayFor(model => model.ARMADA1.SITE.SITENAME) - @Html.DisplayFor(model => model.ARMADA1.SITE.SITEADDRESS)
            </dd>

            <dt>
              Driver(Employee)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EMPLOYEE.EMPLOYEENAME)
            </dd>

            <dt>
                Product Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PRODUCT1.PRODUCTNAME)
            </dd>

            <dt>
               Site Address
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SITE1.SITEADDRESS)
            </dd>

        </dl>
    </div>
    <div class="box-footer">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>