@model Repository.Application.DataModel.UserClientMapping

@{
    ViewBag.Title = "UserClientCreate";
}

<div class="box box-solid">
    <div class="box-header with-border">
        <h3 class="box-title">
            Create - UserClient
        </h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Hidden("ClientId", Model.ClientId)
            @Html.Hidden("ContractId", (long?)ViewBag.ContracId)
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, "UserName", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("UserName", Model.AspNetUsers.Username, new { @class = "form-control", @readonly = "true", @required = "true" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ClientId, "Default Password", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Password("DefaultPassword", "", new { @class = "form-control", @placeholder = "Default Password. Must be changed for first login.", @required = "true" })
                    @Html.ValidationMessageFor(model => model.ClientId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Retype Default Password", "Default Password", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Password("RetypeDefaultPassword", "", new { @class = "form-control", @placeholder = "Default Password. Must be changed for first login.", @required = "true" })
                    @Html.ValidationMessageFor(model => model.ClientId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("DefaultPasswordShown", null, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("DefaultPasswordShown", "", new { @readonly = true, @class = "form-control", @placeholder = "Default Password. Must be changed for first login." })
                    @Html.ValidationMessageFor(model => model.ClientId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Group User", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("sliGroup", null, htmlAttributes: new { @class = "form-control", @required = "required" })
                  </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Remark, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextArea("Remark", "", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
        }

    </div>
    <div class="box-footer">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#DefaultPassword").on("keyup change", function () {
            $("#DefaultPasswordShown").val($("#DefaultPassword").val());

        });
        $("#DefaultPasswordShown").val($("#DefaultPassword").val());
    });
</script>