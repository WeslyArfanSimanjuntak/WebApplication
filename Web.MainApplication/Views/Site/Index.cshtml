@model IEnumerable<Repository.Application.DataModel.SITE>

@{
    ViewBag.Title = "Index";
}
<div class="box box-solid">
    <div class="box-header with-border">
        <h3 class="box-title">
            @Html.ActionLink("Create New", "Create")
        </h3>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-striped" id="masterSite">
            <thead>
                <tr>
                    <th>
                        Site Name
                    </th>
                    <th>
                        Site Address
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                           @item.SITENAME
                        </td>
                        <td>
                           @item.SITEADDRESS
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.SITENAME }) |
                            @Html.ActionLink("Details", "Details", new { id = item.SITENAME }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.SITENAME })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    (function ($) {

        $('#masterSite').DataTable({
            'lengthMenu': [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
            'pageLength': 10,
			'paging': true,
            'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': false
        });
    }(jQuery));

</script>