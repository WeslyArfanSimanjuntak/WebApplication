@model IEnumerable<Repository.Application.DataModel.ARMADA>

@{
    ViewBag.Title = "Index";
}
<div class="box box-solid">
    <div class="box-header with-border">
        <h3 class="box-title">
            @Html.ActionLink("Create New", "Create")
        </h3>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-striped" id="masterArmada">
            <thead>
                <tr>
                    <th>Site Name</th>
                    <th>
                        Armada Name
                    </th>
                    <th>
                        Capacity(Kg)
                    </th>
                    <th>
                        Total Tire
                    </th>
                    <th>
                      Body Color
                    </th>
                    <th>
                        Merk
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SITENAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ARMADANAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ARMADACAPACITYINKG)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ARMADATOTALTIRE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ARMADACOLOR)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ARMADAMERK)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ARMADAID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ARMADAID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ARMADAID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    (function ($) {

        $('#masterArmada').DataTable({
            'lengthMenu': [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
            'pageLength': 10,
			'paging': true,
            'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': false
        });
    }(jQuery));

</script>
