@model Repository.Application.DataModel.ARMADA

@{
    ViewBag.Title = "Delete";
}
<div class="box box-solid">
    <div class="box-header with-border">
        <h3 class="box-title">
            Delete - Armada
        </h3>
        <h4>Are you sure you want to delete this?</h4>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <dl class="dl-horizontal">
            <dt>
                Site
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SITENAME)
            </dd>
            <dt>
                Site Address
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SITE.SITEADDRESS)
            </dd>
            <dt>
                Armada Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ARMADANAME)
            </dd>

            <dt>
                Capacity(Kg)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ARMADACAPACITYINKG)
            </dd>

            <dt>
                Total Tire
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ARMADATOTALTIRE)
            </dd>

            <dt>
                Body Color
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ARMADACOLOR)
            </dd>

            <dt>
                Merk
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ARMADAMERK)
            </dd>

        </dl>
    </div>
    <div class="box-footer">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>
