@model IEnumerable<Repository.Application.DataModel.FinanceTransaction>

@{
    ViewBag.Title = "Index";
}
<div class="box box-solid">
    <div class="box-header with-border">
        <h3 class="box-title">
            @Html.ActionLink("Create New", "Create")
        </h3>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-striped" id="masterFinanceTransaction">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TransactionNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TransactionCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ValueDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DueDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Remark)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CONTRACT.ContractNumber)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransactionNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransactionCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValueDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DueDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remark)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CONTRACT.ContractNumber)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    (function ($) {

        $('#masterFinanceTransaction').DataTable({
            'paging': true,
           'lengthMenu': [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
            'pageLength': 10,
			   'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': false,
            'scrollX': true,
            'order': [[0, "desc"]],
            'dom': 'Bfrtip',
            'buttons': [
                'excelHtml5', {
                    extend: 'pdfHtml5',
                    text: 'Pdf',
                    title: 'Data export',
                    download: 'open'
                }
                //,
                //'csvHtml5',
                //'copyHtml5'
            ]
        });
    }(jQuery));

</script>