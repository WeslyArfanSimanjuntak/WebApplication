@model Repository.Application.DataModel.DeliveryRequest

<div class="box box-solid">
    <div class="box-header with-border">
        <h3 class="box-title">
            Details - Delivery Request
        </h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.DeliveryRequestNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DeliveryRequestNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DeliveryRequestTime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DeliveryRequestTime)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TokenToLoad)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TokenToLoad)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsActiveToken)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActiveToken)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UpdatedBy)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UpdatedDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UpdatedDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CONTRACT.ContractNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CONTRACT.ContractNumber)
            </dd>

            

        </dl>
        <br />
        <dl class="dl-horizontal">
            <dt>
                Detail Product
            </dt>
            <dd></dd>
            @{
                foreach (var item in Model.DeliveryRequestProductDetailTransaction)
                {
                    <dt>
                        Product Name
                    </dt>

                    <dd>
                        @item.PRODUCT.PRODUCTID - @item.PRODUCT.PRODUCTNAME
                    </dd>

                    <dt>
                        Amount
                    </dt>

                    <dd>
                        @item.Amount ton
                    </dd>

                    <dt>
                        Status
                    </dt>

                    <dd>
                        @item.Status
                    </dd>

                    <dt>
                        Driver Name
                    </dt>

                    <dd>
                        @item.DriverName
                    </dd>

                    <dt>
                        Plat Number Vehicle
                    </dt>

                    <dd>
                        @item.ArmadaPlatNumber
                    </dd>
                }

            }

        </dl>
    </div>
    <div class="box-footer">
        @Html.ActionLinkAuthorized("Edit |", "Edit", new { id = Model.DeliveryRequestId })
        @Html.ActionLinkAuthorized("Back to List |", "Index")
        @Html.ActionLinkAuthorized("Back to List Client DR", "indexclient")
    </div>
</div>
