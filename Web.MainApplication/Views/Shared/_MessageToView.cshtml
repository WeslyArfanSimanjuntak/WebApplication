@using Model.Application.System
@{

    List<string> successMessages = (List<string>)TempData["MessageSuccess1402"];
    List<string> infoMessages = (List<string>)TempData["MessageInfo1402"];
    List<string> warningMessages = (List<string>)TempData["MessageWarning1402"];
    List<string> errorMessages = (List<string>)TempData["MessageError1402"];

    if (successMessages != null && successMessages.Count > 0)
    {
        <div id="messageContainer" class="box box-success box-solid">
            <div class="box-header">
                <h3 class="box-title">Success !.</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /.box-tools -->
            </div>
            <!-- /.box-header -->
            <div class="box-body alert-success no-pad-top">
                @{
                    foreach (var item in successMessages)
                    {
                        <p>
                            @Html.Raw(item)
                            @if (successMessages.Count > 1)
                            {
                                <br />
                            }
                        </p>

                    }

                }
            </div>
            <!-- /.box-body -->
        </div>

    }
